{
  "version": 4,
  "configurePresets": [
    {
      "name": "vcpkg-build",
      "displayName": "Vcpkg Build",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
          "type": "FILEPATH"
        }
      }
    }
  ]
}
